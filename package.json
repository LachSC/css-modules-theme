{
  "name": "css-modules-theme",
  "author": "Pavel Klimashkin",
  "license": "MIT",
  "description": "Theme composition for CSS Modules",
  "homepage": "https://github.com/klimashkin/css-modules-theme#readme",
  "keywords": [
    "css",
    "css-modules",
    "theme",
    "theming",
    "react"
  ],
  "bugs": {
    "url": "https://github.com/klimashkin/css-modules-theme/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klimashkin/css-modules-theme.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "~7.5.5",
    "@babel/plugin-proposal-class-properties": "~7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "~7.5.5",
    "@babel/plugin-syntax-object-rest-spread": "~7.2.0",
    "@babel/plugin-transform-react-jsx": "~7.3.0",
    "@babel/preset-env": "~7.5.5",
    "@types/jest": "~24.0.18",
    "@types/lodash": "~4.14.138",
    "@types/node": "~12.7.3",
    "@typescript-eslint/eslint-plugin": "~2.1.0",
    "@typescript-eslint/parser": "~2.1.0",
    "eslint": "~6.3.0",
    "esm": "~3.2.25",
    "husky": "~3.0.5",
    "jest": "~24.9.0",
    "jest-circus": "~24.9.0",
    "lerna": "~3.16.4",
    "lodash": "~4.17.15",
    "rollup": "~0.68.1",
    "rollup-plugin-babel": "~4.1.0",
    "rollup-plugin-node-resolve": "~4.0.0",
    "rollup-plugin-terser": "~3.0.0",
    "rollup-plugin-typescript2": "~0.18.1",
    "ts-jest": "~24.0.2",
    "typescript": "~3.6.2",
    "typescript-eslint-parser": "~22.0.0",
    "utility-types": "~3.7.0"
  },
  "dependencies": {},
  "scripts": {
    "test": "jest --runInBand",
    "types": "tsc --build --verbose",
    "types-watch": "tsc --build --watch",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna exec -- rimraf dist",
    "rollup": "lerna exec --concurrency 2 -- rollup -c ./rollup.config.js",
    "lint": "eslint . --ext .js,.ts",
    "release": "npm run lint && npm run clean && npm run types && npm run rollup && npm run test",
    "prepublishOnly": "npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=5.0.0",
    "yarn": ">=1.0.0"
  }
}
