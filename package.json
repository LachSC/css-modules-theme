{
  "name": "css-modules-theme",
  "private": true,
  "author": "Pavel Klimashkin",
  "license": "MIT",
  "description": "Theme composition for CSS Modules",
  "homepage": "https://github.com/klimashkin/css-modules-theme#readme",
  "keywords": [
    "css",
    "css-modules",
    "theme",
    "theming",
    "react"
  ],
  "bugs": {
    "url": "https://github.com/klimashkin/css-modules-theme/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klimashkin/css-modules-theme.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "~7.2.0",
    "@babel/plugin-proposal-class-properties": "~7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "~7.2.0",
    "@babel/plugin-syntax-object-rest-spread": "~7.2.0",
    "@babel/plugin-transform-react-jsx": "~7.2.0",
    "@babel/preset-env": "~7.2.0",
    "@babel/preset-typescript": "~7.1.0",
    "@types/jest": "~23.3.10",
    "@types/node": "~10.12.12",
    "babel-core": "~7.0.0-bridge.0",
    "babel-jest": "~23.6.0",
    "eslint": "5.10.0",
    "eslint-plugin-typescript": "0.14.0",
    "husky": "1.2.0",
    "jest": "~23.6.0",
    "jest-circus": "~23.6.0",
    "lerna": "~3.6.0",
    "lodash": "~4.17.11",
    "rollup": "~0.67.4",
    "rollup-plugin-babel": "~4.0.3",
    "rollup-plugin-node-resolve": "~4.0.0",
    "rollup-plugin-terser": "~3.0.0",
    "typescript": "~3.2.2",
    "typescript-eslint-parser": "21.0.2",
    "utility-types": "~2.1.0"
  },
  "dependencies": {},
  "scripts": {
    "test": "jest",
    "types": "tsc --build --verbose",
    "types-watch": "tsc --build --watch",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna exec -- rimraf dist",
    "rollup": "lerna exec --concurrency 2 -- rollup -c ./rollup.config.js",
    "lint": "eslint . --ext .js --ext .ts",
    "prepublishOnly": "npm run lint && npm run clean && npm run types && npm run rollup && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=5.0.0",
    "yarn": ">=1.0.0"
  }
}
